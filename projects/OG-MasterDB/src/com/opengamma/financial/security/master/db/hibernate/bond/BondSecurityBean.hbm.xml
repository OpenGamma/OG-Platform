<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.financial.security.master.db.hibernate.bond">
	<union-subclass name="BondSecurityBean" extends="com.opengamma.financial.security.master.db.hibernate.SecurityBean" table="sec_bond">
		<property name="bondType" column="bond_type" type="com.opengamma.financial.security.master.db.hibernate.bond.BondTypeUserType" not-null="true" />
		<property name="issuerName" column="issuername" type="string" not-null="true" />
		<many-to-one name="issuerType" column="issuertype_id" class="IssuerTypeBean" not-null="true" />
		<property name="issuerDomicile" column="issuerdomicile" type="string" not-null="true" />
		<many-to-one name="market" column="market_id" class="MarketBean" not-null="true" />
		<many-to-one name="currency" column="currency_id" class="com.opengamma.financial.security.master.db.hibernate.CurrencyBean" not-null="true" />
		<many-to-one name="yieldConvention" column="yieldconvention_id" class="YieldConventionBean" not-null="true" />
		<many-to-one name="guaranteeType" column="guaranteetype_id" class="GuaranteeTypeBean" />
		<component name="maturity" class="com.opengamma.financial.security.master.db.hibernate.ExpiryBean">
			<component name="expiry" class="com.opengamma.financial.security.master.db.hibernate.ZonedDateTimeBean">
				<property name="date" column="maturity_date" type="timestamp" not-null="true" />
				<property name="zone" column="maturity_zone" type="string" not-null="true" />
			</component>
			<property name="accuracy" column="maturity_accuracy" type="com.opengamma.financial.security.master.db.hibernate.ExpiryAccuracyUserType" not-null="true" />
		</component>
		<many-to-one name="couponType" column="coupontype_id" class="CouponTypeBean" not-null="true" />
		<property name="couponRate" column="couponrate" type="double" not-null="true" />
		<many-to-one name="couponFrequency" column="couponfrequency_id" class="com.opengamma.financial.security.master.db.hibernate.FrequencyBean" not-null="true" />
		<many-to-one name="dayCountConvention" column="daycountconvention_id" class="com.opengamma.financial.security.master.db.hibernate.DayCountBean" not-null="true" />
		<many-to-one name="businessDayConvention" column="businessdayconvention_id" class="com.opengamma.financial.security.master.db.hibernate.BusinessDayConventionBean" />
		<component name="announcementDate" class="com.opengamma.financial.security.master.db.hibernate.ZonedDateTimeBean">
			<property name="date" column="announcement_date" type="timestamp" />
			<property name="zone" column="announcement_zone" type="string" />
		</component>
		<component name="interestAccrualDate" class="com.opengamma.financial.security.master.db.hibernate.ZonedDateTimeBean">
			<property name="date" column="interestaccrual_date" type="timestamp" not-null="true" />
			<property name="zone" column="interestaccrual_zone" type="string" not-null="true" />
		</component>
		<component name="settlementDate" class="com.opengamma.financial.security.master.db.hibernate.ZonedDateTimeBean">
			<property name="date" column="settlement_date" type="timestamp" not-null="true" />
			<property name="zone" column="settlement_zone" type="string" not-null="true" />
		</component>
		<component name="firstCouponDate" class="com.opengamma.financial.security.master.db.hibernate.ZonedDateTimeBean">
			<property name="date" column="firstcoupon_date" type="timestamp" not-null="true" />
			<property name="zone" column="firstcoupon_zone" type="string" not-null="true" />
		</component>
		<property name="issuancePrice" column="issuanceprice" type="double" not-null="true" />
		<property name="totalAmountIssued" column="totalamountissued" type="double" not-null="true" />
		<property name="minimumAmount" column="minimumamount" type="double" not-null="true" />
		<property name="minimumIncrement" column="minimumincrement" type="double" not-null="true" />
		<property name="parAmount" column="paramount" type="double" not-null="true" />
		<property name="redemptionValue" column="redemptionvalue" type="double" not-null="true" />
	</union-subclass>

  <query name="BondSecurityBean.one.bySecurityId"><![CDATA[
    from 
      BondSecurityBean as s
    where
      s.securityId = :securityId
  ]]></query>

  <query name="BondSecurityBean.all">
    from BondSecurityBean
  </query>

</hibernate-mapping>