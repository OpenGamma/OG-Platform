<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.opengamma.masterdb.batch">

  <class name="com.opengamma.batch.domain.CalculationConfiguration" table="rsk_calculation_configuration">
    <id name="id">
      <generator class="org.hibernate.id.enhanced.SequenceStyleGenerator">
      	<param name="optimizer">hilo</param>
      	<param name="increment_size">100</param>
      </generator>
    </id>
    <property name="name" not-null="true"/>
  </class>
  
  <query name="CalculationConfiguration.one.byName">
  	from CalculationConfiguration as a where 
  	a.name = :name</query>  
  
</hibernate-mapping>